                                "AllowNull": true,
                                "DataLength": 100
                            },
                            {
                                "ColumnName": "ClientId",
                                "DataType": "varchar",
                                "AllowNull": true,
                                "DataLength": 50
                            },
                            {
                                "ColumnName": "SoftwareId",
                                "DataType": "varchar",
                                "AllowNull": true,
                                "DataLength": 50
                            },
                            {
                                "ColumnName": "DataHolderBrandId",
                                "DataType": "varchar",
                                "AllowNull": true,
                                "DataLength": 50
                            },
                            {
                                "ColumnName": "FapiInteractionId",
